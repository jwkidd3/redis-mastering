        "class KeyManager:\n",
        "    \"\"\"Manage Redis keys with proper naming conventions.\"\"\"\n",
        "    \n",
        "    def __init__(self, redis_client):\n",
        "        self.r = redis_client\n",
        "        \n",
        "        # Define key patterns\n",
        "        self.patterns = {\n",
        "            'policy': 'policy:{type}:{id}:{field}',\n",
        "            'customer': 'customer:{id}:{field}',\n",
        "            'claim': 'claim:{id}:{field}',\n",
        "            'quote': 'quote:{id}:{field}',\n",
        "            'session': 'session:{token}',\n",
        "            'cache': 'cache:{type}:{key}',\n",
        "            'temp': 'temp:{purpose}:{id}'\n",
        "        }\n",
        "    \n",
        "    def create_key(self, pattern_name, **kwargs):\n",
        "        \"\"\"Create a key using defined patterns.\"\"\"\n",
        "        pattern = self.patterns.get(pattern_name)\n",
        "        if not pattern:\n",
        "            raise ValueError(f'Unknown pattern: {pattern_name}')\n",
        "        return pattern.format(**kwargs)\n",
        "    \n",
        "    def organize_data(self):\n",
        "        \"\"\"Demonstrate key organization patterns.\"\"\"\n",
        "        examples = []\n",
        "        \n",
        "        # Policy keys\n",
        "        policy_key = self.create_key('policy', type='AUTO', id='POL-2024-001', field='details')\n",
        "        self.r.set(policy_key, json.dumps({'premium': 1200, 'coverage': 50000}))\n",
        "        examples.append(('Policy', policy_key))\n",
        "        \n",
        "        # Customer keys\n",
        "        customer_key = self.create_key('customer', id='CUST-1001', field='profile')\n",
        "        self.r.set(customer_key, json.dumps({'name': 'John Doe', 'email': 'john@example.com'}))\n",
        "        examples.append(('Customer', customer_key))\n",
        "        \n",
        "        # Claim keys\n",
        "        claim_key = self.create_key('claim', id='CLM-2024-001', field='status')\n",
        "        self.r.set(claim_key, 'PENDING')\n",
        "        examples.append(('Claim', claim_key))\n",
        "        \n",
        "        return examples\n",
        "\n",
        "# Test key management\n",
        "km = KeyManager(r)\n",
        "\n",
